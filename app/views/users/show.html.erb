      		    <% @book=Book.find(@checkedout.book_id) %>
      		    <%= image_tag(@book.image_url, :alt => "alt text", :class => "book_icon") %>
      		    <%= link_to @book.name, @book%>
              <%= date = @checkedout.created_at + 28.days
                date.to_date 
              %>

            <%=render 'shared/returnbuttonform' %>
<!--          
