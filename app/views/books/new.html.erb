<% provide(:title, 'Create Book')%>
<h1>Book</h1>
<div class="row">
  <div class="span6 offset3">

    <%= form_for(@book) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :isbn %>
      <%= f.text_field :isbn %>

      <%= f.label :image_url %>
      <%= f.text_field :image_url %>

      <%= f.label :description, "Description" %>
      <%= f.text_field :description %>

      <%= f.label :keywords, "Keywords" %>
      <%= f.text_field :keywords %>



      <%= f.submit "Create book", class: "btn btn-large btn-primary" %>
    <% end %>
    
  </div>
</div>