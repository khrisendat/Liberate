<% provide(:title, 'Create Book')%>
<h1>Book</h1>
<div class="row">
  <div class="span6 offset3">

    <%= form_for(@book) do |f| %>
      <%=render 'shared/error_messages'%> 
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :image_url %>
      <%= f.password_field :image_url %>

      <%= f.label :description, "Confirmation" %>
      <%= f.password_field :description %>

      <%= f.submit "Create book", class: "btn btn-large btn-primary" %>
    <% end %>
    
  </div>
</div>